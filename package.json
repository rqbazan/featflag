{
  "name": "@rqbazan/featflag",
  "version": "1.0.4",
  "private": false,
  "description": "A small and modern ReactJS library to use the feature toggling principle",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/rqbazan/featflag.git"
  },
  "license": "MIT",
  "keywords": [
    "features",
    "flags",
    "toggles",
    "bits",
    "flippers"
  ],
  "files": [
    "dist",
    "images"
  ],
  "author": {
    "name": "Ricardo Alexis Quiroz Bazan",
    "email": "raquirozbazan@gmail.com",
    "url": "http://github.com/rqbazan"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "test": "tsc --build tsconfig.testing.json && ava",
    "lint": "eslint .",
    "release": "semantic-release"
  },
  "ava": {
    "files": [
      "dist/*.spec.js"
    ],
    "verbose": true,
    "serial": true,
    "require": [
      "./ava.setup.js"
    ]
  },
  "eslintIgnore": [
    "dist"
  ],
  "eslintConfig": {
    "extends": "rqbazan-ts/react",
    "rules": {
      "jsx-a11y/accessible-emoji": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.spec.tsx",
            "ava.setup.js"
          ]
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      },
      {
        "path": "@semantic-release/github"
      }
    ]
  },
  "peerDependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/lodash.values": "^4.3.6",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.2",
    "@types/sinon": "^7.0.10",
    "ava": "^1.3.1",
    "eslint": "^5.16.0",
    "eslint-config-rqbazan-ts": "^0.1.1",
    "jsdom": "^14.0.0",
    "jsdom-global": "^3.0.2",
    "lodash.values": "^4.3.0",
    "prettier": "^1.17.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-hooks-testing-library": "^0.3.7",
    "react-testing-library": "^6.0.0",
    "semantic-release": "^15.13.3",
    "sinon": "^7.2.7",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "husky": "^2.2.0"
  }
}
